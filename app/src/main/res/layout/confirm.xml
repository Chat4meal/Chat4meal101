<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="500dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:background="@color/colorAccent"
        android:id="@+id/view" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/checkoutI"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="27dp"
                android:text="CheckOut"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/checkFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_above="@+id/prii"
                android:layout_centerHorizontal="true"
                android:text="@string/app_name"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/prii"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="211dp"
                android:text="570"
                android:textSize="15dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/checkoutI"
                android:layout_width="150dp"
                android:layout_height="150dp"

                android:layout_above="@+id/checkFood"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="19dp"
                android:src="@drawable/peppy_paneer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/storename"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="103dp"
                android:text="Alome Stores"
                android:textSize="20dp"/>
        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorAccent"
        android:id="@+id/view2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/view2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:background="@drawable/confirmbut"
        android:text="Order Now"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:id="@+id/button2"
        />

</RelativeLayout>