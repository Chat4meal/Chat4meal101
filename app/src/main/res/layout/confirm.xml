<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="500dp"
    android:layout_height="500dp"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

        </android.support.design.widget.CollapsingToolbarLayout>

    </RelativeLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="190dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="300dp"
        android:background="@color/colorAccent" />

    <RelativeLayout
        android:layout_width="500dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="140dp"
        android:layout_marginRight="140dp">


        <TextView
            android:id="@+id/checkFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:elevation="1sp"
            android:text="@string/app_name"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/prii"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/checkFood"
            android:text="570"
            android:textSize="15dp" />

        <de.hdodenhof.circleimageview.CircleImageView
           android:id="@+id/storeimage"
            android:layout_width="90dp"
            android:layout_height="90dp"

            android:layout_below="@+id/view"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="13dp"

            android:src="@drawable/peppy_paneer" />


        <TextView
            android:id="@+id/storename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/storeimage"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="21dp"
            android:layout_toEndOf="@+id/storeimage"
            android:layout_toRightOf="@+id/storeimage"
            android:fontFamily="sans-serif"
            android:text="Alome Stores"
            android:textColor="@color/white"
            android:textSize="25dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/storename"
            android:layout_alignStart="@+id/storename"
            android:layout_below="@+id/storename"
            android:src="@drawable/ic_access_time_black_24dp"
            android:id="@+id/imageView" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignBottom="@+id/imageView"
            android:layout_marginLeft="170dp"
            android:text="9am-10pm"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignStart="@+id/imageView"
            android:layout_below="@+id/storeimage"
            android:src="@drawable/ic_location_on_black_24dp" />

        <TextView
            android:id="@+id/storeAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/time"
            android:layout_alignStart="@+id/time"
            android:layout_alignTop="@+id/imageView2"
            android:text="9,Kosofe Local government"
            android:textColor="@color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignEnd="@+id/prii"
            android:layout_alignRight="@+id/prii"
            android:layout_below="@+id/prii"
            android:layout_marginTop="17dp"
            android:background="@color/colorAccent"
            android:id="@+id/view" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/checkoutI"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignBottom="@+id/checkFood"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="22dp"
            android:src="@drawable/peppy_paneer" />
    </RelativeLayout>


</RelativeLayout>