<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_add_contact"
    >


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/choosedp1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/btn_save"
        android:layout_alignStart="@+id/btn_save"
        android:layout_below="@+id/txt_user"
        android:layout_marginTop="107dp"
        android:onClick="selectImage"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_account_box_black_24dp" />
    <TextView
        android:id="@+id/txt_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/usename"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choosedp1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/round_button"
        android:hint="Username"
        android:inputType="textCapWords"
        android:maxLength="10"
        android:maxLines="1" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/usename"
        android:layout_alignStart="@+id/usename"
        android:layout_alignTop="@+id/usename"
        android:layout_marginTop="68dp"
        android:background="@drawable/round_button"
        android:hint="Phone"
        android:inputType="phone"
        android:maxLength="11"
        android:maxLines="1" />


    <Button
        android:id="@+id/btn_save"
        style="?android:textAppearanceSmall"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/round_button"
        android:onClick="uploadImage"
        android:text="Next"
        android:textStyle="bold" />


</RelativeLayout>